{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny":  false,
    "allowJs": true,
    "isolatedModules": true,
    "types": [
      "vite/client",
      "vitepress",
      "vite-plugin-pwa/client",
      "vite-plugin-pwa/info"
    ]
  },
  "include": [
    "./.vitepress/**/*.ts",
    "./.vitepress/**/*.vue",
    "./.vitepress/components.d.ts",
    "./**/*.data.ts",
    "../env.d.ts",
    "./*.config.ts"
  ],
  "exclude": ["dist", "node_modules", "dev-dist"]
}